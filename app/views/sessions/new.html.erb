<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
<div class="col-md-4">
</div>
  <div class="col-md-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p class="center" id="signup_link"><strong>New user? <%= link_to "Sign up now!", signup_path %></strong></p>
  </div>
  <div class="col-md-4">
  </div>
</div>